{
  "expo": {
    "name": "Voluntapp",
    "slug": "voluntapp",
    "scheme": "voluntapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.voluntapp.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Voluntapp uses your location to show nearby volunteering opportunities."
      }
    },
    "android": {
      "package": "com.voluntapp.app"
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-router"
      ],
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Voluntapp to use your location to show nearby opportunities."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": ""
      },
      "apiUrl": "https://87e66f5bf4c0.ngrok-free.app"
    }
  }
}
